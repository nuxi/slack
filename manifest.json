{
    "manifest_version": 2,
    "name": "Slack Huddles for Linux",
    "version": "0.4",
    "description": "Enables Slack Huddles on Linux via User-Agent spoofing.",

    "browser_specific_settings": {
        "gecko": {
            "id": "slack@chaotic-neutral.org"
        }
    },

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://*.slack.com/*"
    ],

    "web_accessible_resources": [
        "inject.js"
    ],

    "background": {
        "scripts": ["http.js"]
    },

    "content_scripts": [
        {
            "matches": ["*://*.slack.com/*"],
            "js": ["navigator.js"],
            "run_at": "document_start"
        }
    ]
}
